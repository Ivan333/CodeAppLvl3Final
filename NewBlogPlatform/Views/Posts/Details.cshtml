@model  NewBlogPlatform.Models.Post



<div>
    <div class="post-item">
        <div>
            <h3>@Model.Title</h3>
            <img class="post-img" src="@Model.ImageUrl"  style="width:10%;"/>
            <div>@Html.Raw(@Model.Content)</div>
            <div>
                <div class="pull-left">
                    @Model.DateCreated
                </div>
                <div class="pull-right">
                    @Model.ApplicationUser.UserName
                </div>
            </div>
        </div>
    </div>
</div>
